





<div class="homePage">
    <div class="IntroductionContainer">
            <div class="videoContainer">
            <video src="/BgVideo.mp4" autoplay muted loop></video>
        </div>
        <h1>Movie Inventory</h1>
        </div>
        <div class="categories">
            <% locals.categories.forEach((category) => { %>
                <a href="" class="link">
                    <div class="category">
                    <img src="" alt="">
                    <p><%= category.name %></p>
                </div>
            </a>
            <% }) %>
        </div>
        <div class="movies">
            <% locals.movies.forEach((movie) => { %>
                <a href="" class="link">
                    <div class="movie">
                    <img src="" alt="">
                    <p><%= movie.name %></p>
                </div>
                </a>
            <% }) %>
        </div>
</div>